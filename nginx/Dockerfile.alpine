FROM alpine:3.15

# -----------------------------------------------------------------------------
# Labels
# -----------------------------------------------------------------------------
LABEL \
        maintainer="Vitalii Kulbachenko <vitalii.kulbachenko@gmail.com>"

# -----------------------------------------------------------------------------
#  Nginx Install
# -----------------------------------------------------------------------------
RUN apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/v3.14/main nginx=nginx-1.20.2-r0.apk \
    && mkdir -p /run/nginx

# -----------------------------------------------------------------------------
#  Nginx Config
# -----------------------------------------------------------------------------
EXPOSE 80/tcp 443/tcp

CMD ["nginx", "-g", "daemon off;"]
